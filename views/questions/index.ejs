<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GrindBoard - Question Bank</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">GrindBoard</a>
      <div class="navbar-nav">
        <a class="nav-link active" href="/questions">Question Bank</a>
        <a class="nav-link" href="/sessions">Practice Sessions</a>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Question Bank</h1>
      <a href="/questions/new" class="btn btn-primary">+ Add Question</a>
    </div>

    <!-- Filter Form -->
    <div class="card mb-4">
      <div class="card-body">
        <form method="GET" action="/questions" class="row g-3">
          <div class="col-md-3">
            <input type="text" name="company" class="form-control" placeholder="Filter by company" value="<%= query?.company || '' %>">
          </div>
          <div class="col-md-3">
            <input type="text" name="topic" class="form-control" placeholder="Filter by topic" value="<%= query?.topic || '' %>">
          </div>
          <div class="col-md-2">
            <select name="difficulty" class="form-select">
              <option value="">All Difficulties</option>
              <option value="Easy" <%= query?.difficulty === 'Easy' ? 'selected' : '' %>>Easy</option>
              <option value="Med" <%= query?.difficulty === 'Med' ? 'selected' : '' %>>Med</option>
              <option value="Hard" <%= query?.difficulty === 'Hard' ? 'selected' : '' %>>Hard</option>
            </select>
          </div>
          <div class="col-md-4">
            <button type="submit" class="btn btn-outline-primary">Filter</button>
            <a href="/questions" class="btn btn-outline-secondary">Clear</a>
          </div>
        </form>
      </div>
    </div>

    <!-- Questions Table -->
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Difficulty</th>
          <th>Companies</th>
          <th>Topics</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% questions.forEach(q => { %>
        <tr>
          <td>
            <a href="<%= q.link %>" target="_blank"><%= q.title %></a>
          </td>
          <td>
            <span class="badge bg-<%= q.difficulty === 'Easy' ? 'success' : q.difficulty === 'Med' ? 'warning' : 'danger' %>">
              <%= q.difficulty %>
            </span>
          </td>
          <td><%= q.company.join(', ') || '-' %></td>
          <td><%= q.topic.join(', ') || '-' %></td>
          <td>
            <a href="/questions/<%= q._id %>/edit" class="btn btn-sm btn-outline-primary">Edit</a>
            <form action="/questions/<%= q._id %>?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this question?')">Delete</button>
            </form>
            <a href="/sessions/new/<%= q._id %>" class="btn btn-sm btn-success">Practice</a>
            <a href="/sessions/question/<%= q._id %>" class="btn btn-sm btn-info">History</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>

    <% if (questions.length === 0) { %>
    <div class="text-center text-muted py-5">
      <p>No questions found. <a href="/questions/new">Add your first question!</a></p>
    </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
