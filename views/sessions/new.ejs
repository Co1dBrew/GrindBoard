<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GrindBoard - Log Practice</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">GrindBoard</a>
      <div class="navbar-nav">
        <a class="nav-link" href="/questions">Question Bank</a>
        <a class="nav-link active" href="/sessions">Practice Sessions</a>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h1>Log Practice Session</h1>

    <% if (typeof error !== 'undefined') { %>
    <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <form method="POST" action="/sessions" class="mt-4">
      <div class="mb-3">
        <label class="form-label">Question</label>
        <select name="questionId" class="form-select" required>
          <option value="">Select a question</option>
          <% questions.forEach(q => { %>
          <option value="<%= q._id %>" <%= (selectedQuestion?._id?.toString() === q._id.toString() || session?.questionId?.toString() === q._id.toString()) ? 'selected' : '' %>>
            <%= q.title %> (<%= q.difficulty %>)
          </option>
          <% }) %>
        </select>
      </div>
      <div class="mb-3">
        <label class="form-label">Time Spent (minutes)</label>
        <input type="number" name="timeSpent" class="form-control" value="<%= session?.timeSpent || '' %>" min="0" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Result</label>
        <select name="result" class="form-select" required>
          <option value="">Select result</option>
          <option value="Solved" <%= session?.result === 'Solved' ? 'selected' : '' %>>Solved</option>
          <option value="Unsolved" <%= session?.result === 'Unsolved' ? 'selected' : '' %>>Unsolved</option>
        </select>
      </div>
      <div class="mb-3">
        <label class="form-label">Notes</label>
        <textarea name="notes" class="form-control" rows="3" placeholder="What did you learn? Where did you get stuck?"><%= session?.notes || '' %></textarea>
      </div>
      <button type="submit" class="btn btn-success">Log Session</button>
      <a href="/sessions" class="btn btn-secondary">Cancel</a>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
